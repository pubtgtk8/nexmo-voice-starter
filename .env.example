# Nexmo Voice API Starter Configuration

# Application Configuration
APP_NAME=Nexmo Voice API Starter
APP_VERSION=1.0.0
APP_ENV=development
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
WS_PORT=3001

# Nexmo/Vonage API Configuration
NEXMO_API_KEY=your-nexmo-api-key
NEXMO_API_SECRET=your-nexmo-api-secret
NEXMO_APPLICATION_ID=your-application-id
NEXMO_PRIVATE_KEY_PATH=./private.key
NEXMO_SIGNATURE_SECRET=your-webhook-signature-secret

# Voice Configuration
VOICE_DEFAULT_LANGUAGE=en-US
VOICE_DEFAULT_VOICE=Joey
VOICE_DEFAULT_SPEED=1.0
VOICE_MAX_DURATION=300
VOICE_CHUNK_TIMEOUT=10000

# Call Configuration
CALL_TIMEOUT=30000
CALL_MAX_DURATION=3600
CALL_RECORDING_ENABLED=true
CALL_RECORDING_FORMAT=mp3
CALL_RECORDING_CHANNELS=1
CALL_DTMF_TIMEOUT=5000

# Conference Configuration
CONFERENCE_MAX_PARTICIPANTS=10
CONFERENCE_MAX_DURATION=3600
CONFERENCE_RECORDING_ENABLED=true
CONFERENCE_MUSIC_ON_HOLD=true

# Recording Configuration
RECORDING_PATH=./recordings
RECORDING_MAX_SIZE=10485760
RECORDING_RETENTION_DAYS=30
RECORDING_AUTO_DELETE=true

# File Upload Configuration
UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=audio/wav,audio/mp3,audio/m4a,audio/ogg
UPLOAD_RETENTION_DAYS=7

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5
WS_RECONNECT_DELAY=1000

# Security Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MESSAGE=Too many requests, please try again later

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=./logs/voice-api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Database Configuration (optional for persistence)
DB_TYPE=sqlite
DB_PATH=./data/voice.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_api
DB_USER=voice_user
DB_PASSWORD=voice_password

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_PREFIX=voice:
REDIS_TTL=3600

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health
METRICS_ENABLED=true
METRICS_PATH=/metrics
PROMETHEUS_ENABLED=false

# Development Configuration
DEBUG=true
DEBUG_VOICE=true
DEBUG_CALLS=false
DEBUG_WEBHOOKS=false
HOT_RELOAD=true

# Feature Flags
FEATURE_RECORDING=true
FEATURE_CONFERENCE=true
FEATURE_DTMF=true
FEATURE_TTS=true
FEATURE_FILE_UPLOAD=true
FEATURE_WEBSOCKET=true
FEATURE_RATE_LIMITING=true

# External Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your/webhook

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
SSL_CA_PATH=./certs/ca.pem

# Docker Configuration
DOCKER_ENV=development
DOCKER_EXPOSED_PORT=3000
DOCKER_WS_PORT=3001
DOCKER_RESTART_POLICY=unless-stopped

# Performance Configuration
MAX_CONCURRENT_CALLS=10
MAX_CONCURRENT_RECORDINGS=5
MAX_CONCURRENT_CONFERENCES=3
MEMORY_LIMIT=512m
CPU_LIMIT=0.5

# Error Handling
ERROR_LOG_ENABLED=true
ERROR_WEBHOOK_ENABLED=false
ERROR_EMAIL_ENABLED=false
ERROR_EMAIL_RECIPIENT=admin@yourcompany.com

# Notification Settings
NOTIFICATION_CALL_STARTED=true
NOTIFICATION_CALL_ENDED=true
NOTIFICATION_RECORDING_READY=true
NOTIFICATION_CONFERENCE_JOINED=true
NOTIFICATION_DTMF_RECEIVED=true

# Webhook Configuration
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3
WEBHOOK_RETRY_DELAY=5000
WEBHOOK_SECRET=your-webhook-secret

# API Configuration
API_TIMEOUT=30000
API_RETRIES=3
API_RETRY_DELAY=1000
API_MAX_REDIRECTS=5

# Testing Configuration
TEST_MODE=false
MOCK_NEXMO=false
MOCK_CALLS=false
MOCK_RECORDINGS=false
MOCK_CONFERENCES=false

# Custom Configuration
CUSTOM_TTS_ENDPOINT=
CUSTOM_STT_ENDPOINT=
CUSTOM_TRANSLATION_ENDPOINT=
CUSTOM_SENTIMENT_ANALYSIS_ENDPOINT=

# Business Hours
BUSINESS_HOURS_ENABLED=false
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
BUSINESS_HOURS_TIMEZONE=America/New_York
BUSINESS_HOURS_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday

# Compliance
COMPLIANCE_RECORDING_REQUIRED=false
COMPLIANCE_RECORDING_RETENTION=90
COMPLIANCE_DTMF_MASKING=true
COMPLIANCE_CALL_LOGGING=true

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=
ANALYTICS_ENDPOINT=https://www.google-analytics.com/collect

# Load Balancing
LOAD_BALANCER_ENABLED=false
LOAD_BALANCER_ALGORITHM=round-robin
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=30000
LOAD_BALANCER_HEALTH_CHECK_TIMEOUT=5000